@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Movies:</h2>
<div>
    @Html.ActionLink("New Movie", "New", "Movies", new { }, new { @class = "btn btn-primary" })
</div>
<br />

<table id="movies" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return `<a href='/movies/edit/${movie.id}'>${movie.name}</a>`;
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `<button class='btn btn-danger btn-xs js-delete' data-movie-id=${data}>Delete</a>`;
                        }
                    }
                ]
            });
            $("#movies").on("click",
                ".js-delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this movie?",
                        function (result) {
                            $.ajax({
                                url: "/api/movies/" + button.attr("data-movie-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                        });
                });
        });
    </script>
}