@model vidz.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <div>
        <h2>@Model.Name</h2>
        <ul>
            <li><b><u>Genre:</u></b> @Model.Genre.Name</li>
            <li><b><u>Release Date:</u></b> @Model.ReleaseDate.ToString("D")</li>
            <li><b><u>Date Added:</u></b> @Model.DateAdded.ToString("D")</li>
            <li><b><u>Stock:</u></b> @Model.Stock</li>
        </ul>
    </div>

}
else
{
    <h2>No Movies with that Name!</h2>
}

